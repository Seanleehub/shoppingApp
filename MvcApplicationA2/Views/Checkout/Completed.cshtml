@model MvcApplicationA2.Models.PaidView

@{
    ViewBag.Title = "Completed";
}

<h2>Checkout Completed</h2>

<h4>Thank You for Shopping with us, <b>@Model.CustomerName</b>. Your Order Id is <b>@ViewBag.Message</b>.</h4>

<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Price (each)
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.paidItems)
    {        
        <tr>
            <td>
                @item.ProductTitle
            </td>
            <td>
                @item.Price.ToString("0.00")
            </td>
            <td>
                @item.Count
            </td>
            <td>
            </td>
        </tr>
    }
    <tr>
        <td>
            Total Paid
        </td>
        <td>
            @Model.Total.ToString("0.00")
        </td>
        <td></td>
        <td></td>
    </tr>
    <tr id="border23">
        <td>
        </td>
        <td></td>
        <td></td>
        <td>
        </td>
    </tr>
</table>
<div id="Confirm2">
    Your Purchase Was Successfull!
</div>
 <div id="ccenter">
    Thank You Again for Shopping at MyComputer! Continue Broswing our @Html.ActionLink("Products", "Index", "Products")
</div>



