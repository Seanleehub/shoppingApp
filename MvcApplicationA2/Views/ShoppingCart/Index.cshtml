@model MvcApplicationA2.Models.ShoppingCartViewModel

@{
    ViewBag.Title = "Index";
}
    <h2>Shopping Cart</h2>
    <h3>
        Review your cart:
        </h3>        
        <table class="table">
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Price (each)
                </th>
                <th>
                    Quantity
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model.CartItems)
    {
        <tr>
                    <td>
                        @Html.ActionLink(item.Product.Title, "Index", "Products", new { id = item.ProductID }, null)
                    </td>
                    <td>
                        @item.Product.Price.ToString("0.00")
                    </td>
                    <td>
                        @item.Count
                    </td>
                    <td>
                        <a href="@Url.Action("RemoveFromCart", "ShoppingCart", new { id = item.RecordId })" class="btn btn-default" onclick="return alert('Product Successfully Removed from Cart')">Remove from Cart</a>
                    </td>
                </tr>
    }
            <tr>
                <td>
                    Total
                </td>
                <td>
                    @Model.CartTotal.ToString("0.00")
                </td>
                <td></td>
                <td></td>
            </tr>
            <tr id="border23">
                <td>
                    @Html.ActionLink("Product List", "Index", "Products")
                </td>
                <td></td>
                <td></td>
                <td>                   
                    <a href="@Url.Action("Index", "Checkout")" id="send">Checkout >></a>
               </td>
            </tr>
        </table>


